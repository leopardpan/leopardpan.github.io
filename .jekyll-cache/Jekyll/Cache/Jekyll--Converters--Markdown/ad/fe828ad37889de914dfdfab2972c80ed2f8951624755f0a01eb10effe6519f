# Read the shapefile
sf = shapefile.Reader("guangdong.shp")

# Plot the map
for shape in sf.shapeRecords():
    x, y = zip(*shape.shape.points)
    plt.plot(x, y)

# Show the plot
plt.show()
</code></pre>

